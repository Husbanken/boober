          {
              "name": "${docker.istag}",
              "from": {
                "kind": "DockerImage",
                "name": "${docker.registry}/${docker.group}/${docker.name}:${docker.tag}"
              },
              "importPolicy": {
                "scheduled": true
              }
          }
        ]
      }
