{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "${adc.name}",
    "annotations": {
      "sprocket.sits.no/service.webseal": "$!{dd.websealRoute}",
      "sprocket.sits.no/service.webseal-roles": "$!{dd.websealRoles}",
      "prometheus.io/scheme": "http",
#if(${dd.prometheus})
      "prometheus.io/scrape": "true",
      "prometheus.io/path": "${dd.prometheus.path}",
      "prometheus.io/port": "${dd.prometheus.port}"
#else
      "prometheus.io/scrape": "false",
#end
    },
    "labels": {
      "app": "${adc.name}",
      "updatedBy" : "${username}",
      "affiliation": "${adc.affiliation}"
    }
  },
  "spec": {
    "ports": [
      {
        "name": "http",
        "protocol": "TCP",
        "port": 80,
        "targetPort": 8080,
        "nodePort": 0
      }
    ],
    "selector": {
      "name": "${adc.name}"
    },
    "type": "ClusterIP",
    "sessionAffinity": "None"
  }
}
